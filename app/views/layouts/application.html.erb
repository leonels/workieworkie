<!DOCTYPE html>
<html ng-app="SearcherApp">
<head>
  <title>Workie Workie - Jobs in Laredo, Texas</title>
  <%= 
    # stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true 
    stylesheet_link_tag    'application', media: 'all' 
  %>
  <%= 
    # javascript_include_tag 'application', 'data-turbolinks-track' => true 
    javascript_include_tag 'application'
  %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a href="../" class="navbar-brand">Workie Workie</a>
          <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="navbar-collapse collapse" id="navbar-main">
          <ul class="nav navbar-nav">
            <% if user_signed_in? %>
            <li>
              <%= link_to 'Dashboard', dashboard_index_url %>
            </li>
            <% end %>
            <li>
              <%= link_to 'Jobs', jobs_url %>
            </li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to "My Profile (#{current_user.email})", current_user %></li>
              <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
            <% else %>
              <li><%= link_to "Sign up", new_user_registration_path %></li>
              <li><%= link_to "Login", new_user_session_path %></li>
            <% end %>
          </ul>

        </div>
      </div>
    </div>


    <div class="container">

      <div class="page-header" id="banner">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12">
            
            <%= "<p class=\"notice\">#{notice}</p>" if notice %>
            <%= "<p class=\"alert\">#{alert}</p>" if alert %>

            <%= yield %>
          </div>
        </div>
      </div>

      <footer>
        <div class="row">
          <div class="col-lg-12">
            <ul class="list-unstyled">
              <% if user_signed_in? %>
                <li><%= link_to 'Dashboard', dashboard_index_url %></li>
              <% end %>
              <li><%= link_to 'Jobs', jobs_url %></li>
              <li><a href="#">About</a></li>
              <li><a href="#">Contact</a></li>
            </ul>
          </div>
        </div>
      </footer>


    </div><!-- /.container -->

</body>
</html>
