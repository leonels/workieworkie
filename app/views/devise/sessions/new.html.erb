<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-signin'}) do |f| %>

  <h2 class="form-signin-heading">Sign in to Rails Boilerplate</h2>

  <%= f.label :email, class: 'sr-only' %><br />
  <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email address', required: '' %>

  <%= f.label :password, class: 'sr-only' %><br />
  <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password', required: '' %>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me %> Remember me
      <% end %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-lg btn-primary btn-block' %>
  </div>

  <p style="margin-top:20px;">
    <%= render "devise/shared/links" %>
  </p>

<% end %>