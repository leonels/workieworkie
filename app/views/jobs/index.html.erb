<div ng-controller="SearchCtrl">

  <header 
    class="page-header" 
    style="
      background-image: url('wood_pattern.png'); 
      padding:60px 0;">
    <div class="container">
      <div 
        class="well col-md-6 col-md-offset-3"
        style="
          background:rgba(255,255,255,0.70);
          border:0;">
        <form role="form">
          <input type="search" class="form-control" placeholder="Search" ng-model="query">
        </form>
      </div><!-- /.well -->
    </div>
  </header>

